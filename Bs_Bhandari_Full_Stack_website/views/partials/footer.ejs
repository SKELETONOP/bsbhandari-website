<!-- Mobile Menu Toggle Script -->
<script>
  const toggleButton = document.getElementById("togglebuttonM");

  function toggleMenu() {
    const mobileMenu = document.getElementById("mobileMenu");

    if (mobileMenu.classList.contains("-right-full")) {
      mobileMenu.classList.remove("-right-full");
      mobileMenu.classList.add("right-0");
      toggleButton.innerText = "X";
    } else {
      mobileMenu.classList.remove("right-0");
      mobileMenu.classList.add("-right-full");
      toggleButton.innerText = "‚ò∞"; // <-- Add this here to reset icon
    }
  }

  // Close menu when clicking outside
  document.addEventListener("click", function (event) {
    const mobileMenu = document.getElementById("mobileMenu");
    const burgerMenu = document.querySelector(".burger-menu");

    if (
      !mobileMenu.contains(event.target) &&
      !burgerMenu.contains(event.target)
    ) {
      mobileMenu.classList.remove("right-0");
      mobileMenu.classList.add("-right-full");
      toggleButton.innerText = "‚ò∞";
    }
  });
</script>
