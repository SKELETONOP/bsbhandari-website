<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>
  <body class="bg-gray-900 text-white min-h-screen font-sans">

    <%- include('partials/nav') %>

    <main class="flex justify-center items-center py-12 px-4">
      <div class="w-full max-w-xl bg-gray-800 p-8 rounded-2xl shadow-lg">
        <h2 class="text-3xl font-semibold text-center mb-6 text-cyan-400">Book an Appointment</h2>

        <form action="/appointments" method="POST" class="space-y-6">
          <!-- Name -->
          <div>
            <label for="name" class="block mb-2 font-medium">Full Name</label>
            <input
              type="text"
              name="name"
              id="name"
              required
              class="w-full px-4 py-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-cyan-400"
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block mb-2 font-medium">Email Address</label>
            <input
              type="email"
              name="email"
              id="email"
              required
              class="w-full px-4 py-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-cyan-400"
            />
          </div>

          <!-- Date -->
          <div>
            <label for="date" class="block mb-2 font-medium">Appointment Date</label>
            <input
              type="date"
              name="date"
              id="date"
              required
              class="w-full px-4 py-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-cyan-400"
            />
          </div>

          <!-- Time -->
          <div>
            <label for="time" class="block mb-2 font-medium">Time Slot</label>
            <select
              name="time"
              id="time"
              required
              class="w-full px-4 py-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-cyan-400"
            >
              <option value="">Select a time</option>
              <option value="10:00 AM">10:00 AM</option>
              <option value="11:00 AM">11:00 AM</option>
              <option value="1:00 PM">1:00 PM</option>
              <option value="3:00 PM">3:00 PM</option>
              <option value="5:00 PM">5:00 PM</option>
            </select>
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block mb-2 font-medium">Reason (Optional)</label>
            <textarea
              name="message"
              id="message"
              rows="4"
              class="w-full px-4 py-2 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-cyan-400"
            ></textarea>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <button
              type="submit"
              class="bg-cyan-500 hover:bg-cyan-600 text-white px-6 py-2 rounded-md font-semibold transition"
            >
              Submit Appointment
            </button>
          </div>
        </form>
      </div>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
